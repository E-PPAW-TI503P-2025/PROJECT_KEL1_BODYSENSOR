// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- Paste Model Tabel di Bawah sini ---

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   
  role      String   @default("USER") 
  sensorLogs SensorLog[]
  settings   Settings? 
  alerts     AlertHistory[]
}

model SensorLog {
  id        Int      @id @default(autoincrement())
  value     Float    
  status    String   
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Settings {
  id              Int     @id @default(autoincrement())
  thresholdLimit  Float   
  monitoringMode  String  @default("OTOMATIS") 
  enableNotify    Boolean @default(true)
  userId          Int     @unique
  user            User    @relation(fields: [userId], references: [id])
}

model AlertHistory {
  id        Int      @id @default(autoincrement())
  message   String   
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}