@startuml
left to right direction

actor Admin
actor "User (Mahasiswa/Karyawan)" as User

rectangle "Smart Room Occupancy System" {

  usecase "Login" as UC_Login

  usecase "Manage Ruangan (CRUD)" as UC_ManageRoom
  usecase "Manage Device IoT\n(Assign / Unassign ESP32)" as UC_ManageDevice
  usecase "Lihat Dashboard Monitoring" as UC_Dashboard

  usecase "Melihat Daftar Ruangan" as UC_ViewRoom
  usecase "Melakukan Booking Ruangan" as UC_Booking
  usecase "Melihat History Booking" as UC_History
}

' Admin relations
Admin --> UC_Login
Admin --> UC_ManageRoom
Admin --> UC_ManageDevice
Admin --> UC_Dashboard

' User relations
User --> UC_ViewRoom
User --> UC_Booking
User --> UC_History

' Include relations
UC_ManageRoom ..> UC_Login : <<include>>
UC_ManageDevice ..> UC_Login : <<include>>
UC_Dashboard ..> UC_Login : <<include>>
@enduml